# Supabase Configuration
# Get these values from your Supabase project settings (https://app.supabase.com)
# Settings > API > Project URL and Project API keys

VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Admin access: only this email can access /admin and /admin/questions
VITE_ADMIN_EMAIL=your_email@example.com

# Supabase Admin (server-side only, NO VITE_ prefix — never exposed to browser)
# Supabase Dashboard > Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# App URL (production domain — overrides VERCEL_URL for OAuth callbacks)
APP_URL=https://cloudmasterit.com

# Kakao OAuth (server-side only)
# https://developers.kakao.com > 내 애플리케이션 > 앱 키 > REST API 키
KAKAO_REST_API_KEY=your_kakao_rest_api_key
# 보안 탭에서 Client Secret 활성화 시 필수
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# Naver OAuth (server-side only)
# https://developers.naver.com > 내 애플리케이션 > 애플리케이션 등록
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret
